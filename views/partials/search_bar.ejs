<div class="search-bar">
    <span class="material-symbols-rounded leading-icon">search</span>
    <img src="/images/logo.svg" width="97" height="24" alt="Musify logo" class="logo" data-logo>

    <form action="/search" method="post" class="search-form">
        <label for="search" class="sr-only">¿Qué quieres escuchar?</label>
        <input type="search" name="query" id="search" class="search-field body-large" placeholder="¿Qué quieres escuchar?" value="<%= locals.query %>" required data-search-field>
    </form>

    <%
        const {
            url ='/images/avatar.png',
            width = 30,
            height = 30,
        } = locals.images.find(item => item.width === 64)
    %>

        <div class="menu-wrapper" data-menu-wrapper>
            <button class="icon-btn" aria-label="My profile" data-ripple data-menu-toggler>
            <img src="<%= url %>" width="<%= width %>" height="<%= height %>" alt="<%= display_name %> profile" class="avatar">
            <div class="state-layer"></div>
            </button>
        </div>

</div>

